@{
	ViewData["Title"] = "Login";//Sayfanın başlığını oluşturmamıza yarıyor.
}


<div class="row">
	<div class="col-4 offset-4	">
		<h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>


<div class="row">
	<div class="col-4 offset-4">
		<form>
			<div class="form-group mb-3">
				<label class="form-label">Username</label>
				<input class="form-control" placeholder="johndoe" />
			</div>
			<div class="form-group mb-3">
				<label class="form-label">Password</label>
				<input class="form-control" placeholder="P@ssw*rd!" />
			</div>
			<div class="form-group d-grid mb-3">
				<button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button> <!-- Font-awesome kütüphanesini ekleyerek ikon simgesi koyduk->
			</div>
		</form>

	</div>

</div>