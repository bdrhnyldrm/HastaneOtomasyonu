@model TurLoginViewModel //Bu html sayfasının modelinin LoginViewModel olduğunu belirtiyoruz.

@{
	ViewData["Title"] = "Giriş Sayfası";//Sayfanın başlığını oluşturmamıza yarıyor.
}


<div class="row">
	<div class="col-4 offset-4	">
		<h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>


<div class="row">
	<div class="col-4 offset-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div> @*propertylerin dışındaki hataları göster*@

			<div class="form-group mb-3">
				<label asp-for="Username" class="form-label">Kullanıcı Adı</label> <!--asp for ile birlikte kullanıcı sınıftaki propertyler ile bağladık.-->
				<input asp-for="Username" class="form-control" placeholder="Kullanıcı adını giriniz..." />
				<span asp-validation-for="Username" class="text-danger small"></span> <!--Hata olursa bu span etiketlerinde gözükecek-->
			</div>
			<div class="form-group mb-3">
				<label asp-for="Password" class="form-label">Şifre</label>
				<input asp-for="Password" class="form-control" placeholder="Şifreyi giriniz..." />
				<span asp-validation-for="Password" class="text-danger small"></span>
			</div>
			<div class="form-group d-grid mb-3">
				<button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Giriş</button> @*Font-awesome kütüphanesini ekleyerek ikon simgesi koyduk*@

			</div>
		</form>

	</div>

</div>