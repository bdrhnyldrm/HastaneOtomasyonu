@model List<UserModel>
@{
	ViewData["Title"] = "Users";
}

<div class="row">
	<div class="col">
		<h1 class="diplay-4">@_localization.Getkey("Users").Value</h1>
		<hr />
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		<a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>@_localization.Getkey("NewUser").Value</a>
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		<table class="table table-hover table-sm">
			<thead>
				<tr>
					<th>@_localization.Getkey("NameSurname").Value</th>
					<th>@_localization.Getkey("Username").Value</th>
					<th>@_localization.Getkey("Locked").Value</th>
					<th>@_localization.Getkey("Role").Value</th>
					<th>@_localization.Getkey("CreatedAt").Value</th>
					<th></th>

				</tr>
			</thead>
			<tbody>
				@foreach(UserModel user in Model)
				{
					<tr>
						<td>@user.FullName</td>
						<td>@user.Username</td>
						<td>@if (user.Locked)
							{
								<i class="fa fa-check text-success"></i>
							}
							else
							{
								<i class="fa fa-times text-danger"></i>

							}
						</td>
						<td>@user.Role</td>
						<td>@user.CreatedAt</td>
						<td class="text-end">
							<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>@_localization.Getkey("Edit").Value</a>
							<a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('@_localization.Getkey("Sure").Value : @user.Username ?')" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>@_localization.Getkey("Remove").Value</a>
						</td>

						
					</tr>
				}
			</tbody>

		</table>

	</div>

</div>
